<Window x:Class="SSDL.View.ProgressBar1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SSDL.View" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" ResizeMode="NoResize" Background="#FF5C5C5C"
        Title="Processing...." Height="115" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Name="lblContent" Content="Generating BOM Please wait..." Foreground="White" FontSize="15" Margin="1,5,0,0" />
        <ProgressBar IsIndeterminate="True" Grid.Row="1"  Orientation="Horizontal" Margin="5,0,5,0" />
    </Grid>
</Window>
